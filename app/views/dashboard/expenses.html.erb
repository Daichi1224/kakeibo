<%= render "month_selector" %>

<h3 class="section-title">Expenses (<%= @expenses.count %>)</h3>
<div class="card">
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Category</th>
        <th>Description</th>
        <th>Amount</th>
        <th>Original Text</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.date.strftime("%m/%d") %></td>
          <td><span class="badge"><%= expense.category %></span></td>
          <td><%= expense.description %></td>
          <td><%= number_to_currency(expense.amount, unit: "Â¥", precision: 0) %></td>
          <td style="font-size:0.8rem; color: var(--text-muted);"><%= expense.original_text %></td>
        </tr>
      <% end %>
      <% if @expenses.empty? %>
        <tr><td colspan="5" style="text-align:center; color: var(--text-muted);">No expenses this month</td></tr>
      <% end %>
    </tbody>
  </table>
</div>
